<div>
 <h1>Prodcuts list</h1>

<table class="people_list">
  <tr>
    <th>Id</th>
    <th>title</th>
    <th>description</th>
    <th>code</th>
    <th>price</th>
    <th>status</th>
    <th>stock</th>
    <th>category</th>
    <th>thumbnails</th>
    </tr>
{{#each products}}
    <tr>
      <form method="post" action="api/carts/addProduct">
        <td style="text-align: center;"><input
            type="hidden"
            name="idProduct"
            value={{this._id}}
          />{{this._id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>{{this.code}}</td>
        <td>{{this.price}}</td>
        <td>{{this.status}}</td>
        <td>{{this.stock}}</td>
        <td>{{this.category}}</td>
        <td>{{this.thumbnails}}</td>
        <td><button
            id="addProduct"
            type="submit"
          >Add to cart</button></td>
      </form>
    </tr>
  {{/each}}

</table>

</div>